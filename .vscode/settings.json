{
  "json.schemas": [
    {
      "fileMatch": ["config/keys.json", "config/keys.example.json"],
      "url": "./config/keys.schema.json"
    },
    {
      "fileMatch": ["config/config.json", "config/config.example.json"],
      "url": "./config/config.schema.json"
    }
  ],
  "workbench.editor.customLabels.patterns": {
    "**/src/**/+page.*": "Page – ${dirname} (.${extname})",
    "**/src/**/+layout.*": "Layout – ${dirname} (.${extname})"
  },
  "files.associations": {
    "*.css": "tailwindcss",
    "Caddyfile": "properties"
  },
  "[javascript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[typescript]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[javascriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[typescriptreact]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[json]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[jsonc]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[jsonl]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[svelte]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[css]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  },
  "[tailwindcss]": {
    "editor.defaultFormatter": "biomejs.biome",
    "editor.formatOnSave": true
  }
}
