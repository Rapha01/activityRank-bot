    "@activityrank/tsconfig": "workspace:*",
    "@crowdin/cli": "^4.11.0",
    "@discordjs/core": "^2.3.0",
    "nodemon": "^3.1.10",
    "pino-pretty": "^11.3.0",
    "typescript": "^5.9.3",
    "vitest": "^2.1.9"
