    "@hono/node-server": "^1.19.6",
    "@hono/zod-validator": "^0.7.4",
    "@isaacs/ttlcache": "^1.4.1",
    "@sapphire/async-queue": "^1.5.5",
    "@sapphire/duration": "^1.2.0",
    "@sapphire/snowflake": "^3.5.5",
    "callsites": "^4.2.0",
    "croner": "^8.1.2",
    "discord.js": "^14.24.2",
    "fast-glob": "^3.3.3",
    "hono": "^4.10.4",
    "i18next": "^24.2.3",
